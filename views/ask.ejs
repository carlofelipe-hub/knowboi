<!DOCTYPE html>
<html>
<head>
  <title>KnowBoi ‚Äì Ask a Question</title>

  <style>
    body {
      background-color: #f6f4fa;
      font-family: 'Segoe UI', sans-serif;
      color: #4a4e69;
      max-width: 800px;
      margin: 0 auto;
      padding: 40px 20px;
    }

    h1 {
      color: #7a9e9f;
      font-size: 32px;
      margin-bottom: 10px;
    }

    h2 {
      color: #6d6875;
      font-size: 22px;
      margin-top: 30px;
    }

    .chat-box {
      background: #f4f1de;
      border-radius: 12px;
      padding: 15px 20px;
      margin: 15px 0;
      box-shadow: 0 1px 4px rgba(0, 0, 0, 0.08);
    }

    .q {
      font-weight: 600;
      color: #e5989b;
      margin-bottom: 5px;
    }

    .a {
      margin-top: 5px;
      color: #4a4e69;
    }

    form {
      margin-top: 30px;
      background: #e9f5f2;
      padding: 20px;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    input[type="text"] {
      width: 100%;
      padding: 12px;
      border: none;
      border-radius: 8px;
      margin-bottom: 10px;
      font-size: 16px;
    }

    button {
      background-color: #84a59d;
      color: white;
      border: none;
      padding: 10px 20px;
      border-radius: 8px;
      font-size: 16px;
      cursor: pointer;
      transition: background 0.2s ease;
    }

    button:hover {
      background-color: #99c1b9;
    }

    .nav {
      margin-top: 20px;
      text-align: center;
    }

    .nav a {
      display: inline-block;
      margin: 10px;
      padding: 12px 24px;
      font-size: 15px;
      color: white;
      background-color: #84a59d;
      text-decoration: none;
      border-radius: 10px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
      transition: background 0.3s;
    }

    .nav a:hover {
      background-color: #99c1b9;
    }

    .success {
      color: #6a994e;
      margin-top: 10px;
    }

    .error {
      color: #e5989b;
      margin-top: 10px;
    }

    .chat-entry {
      margin-top: 15px;
    }

    .dots {
      font-style: italic;
      display: inline-block;
      margin-left: 6px;
    }

    .dot {
      animation: blink 1s infinite;
    }

    .dot:nth-child(2) { animation-delay: 0.2s; }
    .dot:nth-child(3) { animation-delay: 0.4s; }

    @keyframes blink {
      0%, 100% { opacity: 0; }
      50% { opacity: 1; }
    }

    .spinner {
      display: inline-block;
      width: 12px;
      height: 12px;
      margin-left: 10px;
      border: 2px solid #ccc;
      border-top: 2px solid #84a59d;
      border-radius: 50%;
      animation: spin 0.8s linear infinite;
      vertical-align: middle;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }
  </style>
</head>

<body>

  <h1>Ask KnowBoi</h1>

  <% if (chatHistory && chatHistory.length) { %>
    <h2>Conversation History</h2>
    <% chatHistory.forEach(function(item, i) { %>
      <div class="chat-box">
        <div class="q">Q<%= i + 1 %>: <%= item.q %></div>
        <div class="a">A<%= i + 1 %>: <%= item.a %></div>
      </div>
    <% }) %>
  <% } %>

  <form id="ask-form">
    <input type="text" id="question-input" placeholder="Ask me something..." required />
    <button type="submit">Ask</button>
  </form>
  
  <div id="chat-box">
    <% if (chatHistory && chatHistory.length) { %>
      <% chatHistory.forEach((item, i) => { %>
        <div class="chat-entry">
          <p><strong>You:</strong> <%= item.q %></p>
          <p><strong>KnowBoi:</strong> <%= item.a %></p>
        </div>
      <% }) %>
    <% } %>
  </div>

  <div class="nav">
    <a href="/">üè† Back to Menu</a>
    <a href="/upload">üìÑ Upload</a>
    <a href="/logout">üö™ Logout</a>
  </div>

  <script>
    const form = document.getElementById('ask-form');
    const questionInput = document.getElementById('question-input');
    const chatBox = document.getElementById('chat-box');

    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const question = questionInput.value.trim();
      if (!question) return;

      const userMsg = document.createElement('div');
      userMsg.className = 'chat-entry';
      userMsg.innerHTML = `<strong>You:</strong> ${question}`;
      chatBox.appendChild(userMsg);

      const botMsg = document.createElement('div');
      botMsg.className = 'chat-entry';
      botMsg.innerHTML = `
        <strong>KnowBoi:</strong>
        <span class="dots">Typing<span class="dot">.</span><span class="dot">.</span><span class="dot">.</span></span>
        <span class="spinner"></span>
      `;
      chatBox.appendChild(botMsg);

      chatBox.scrollTop = chatBox.scrollHeight;

      try {
        const res = await fetch('/ask', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ question })
        });

        if (!res.ok) throw new Error(`Server responded with ${res.status}`);

        const data = await res.json();
        botMsg.innerHTML = `<strong>KnowBoi:</strong> ${data.answer}`;
      } catch (err) {
        console.error("Fetch error:", err);
        botMsg.innerHTML = `<strong>KnowBoi:</strong> ‚ö†Ô∏è Something went wrong. Please try again.`;
      }

      questionInput.value = '';
      chatBox.scrollTop = chatBox.scrollHeight;
    });
  </script>

</body>
</html>
